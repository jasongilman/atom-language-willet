{
  "name": "Willet",
  "scopeName": "source.willet",
  "fileTypes": [
    "wlt"
  ],
  "patterns": [
    { "include": "#willet" }
  ],
  "repository": {
    "willet": {
      "patterns": [
        { "include": "#willet-double-string-value"},
        { "include": "#willet-single-string-value"}
      ]
    },
    "willet-double-string-value": {
      "contentName": "string.quoted.double.willet",
      "begin": "\\s*+((\"))",
      "end": "\\s*+(?:((\"))|(\n))",
      "beginCaptures": {
        "1": { "name": "string.quoted.double.willet" },
        "2": { "name": "punctuation.definition.string.begin.willet" }
      },
      "endCaptures": {
        "1": { "name": "string.quoted.double.willet" },
        "2": { "name": "punctuation.definition.string.end.willet" },
        "3": { "name": "invalid.illegal.newline.willet" }
      },
      "patterns": [
        { "include": "#willet-string-content" }
      ]
    },
    "willet-single-string-value": {
      "contentName": "string.quoted.single.willet",
      "begin": "\\s*+(('))",
      "end": "\\s*+(?:(('))|(\n))",
      "beginCaptures": {
        "1": { "name": "string.quoted.single.willet" },
        "2": { "name": "punctuation.definition.string.begin.willet" }
      },
      "endCaptures": {
        "1": { "name": "string.quoted.single.willet" },
        "2": { "name": "punctuation.definition.string.end.willet" },
        "3": { "name": "invalid.illegal.newline.willet" }
      },
      "patterns": [
        { "include": "#willet-string-content" }
      ]
    },
    "willet-string-content": {
      "patterns": [
        { "name": "constant.character.escape.willet",
          "match": "\\\\[/'\"\\\\nrtbf]"
        },
        { "name": "constant.character.escape.willet",
          "match": "\\\\u([0-9a-fA-F]{4})"
        }
      ]
    }
  }
}
